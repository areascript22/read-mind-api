generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id           Int           @id @default(autoincrement())
  name         String        @unique @db.VarChar(50)
  description  String        @db.VarChar(255)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  users        User[]
  roleRequests RoleRequest[] @relation("RequestedRole")
}

model User {
  id                  Int                @id @default(autoincrement())
  name                String             @db.VarChar(100)
  lastName            String             @db.VarChar(100)
  email               String             @unique @db.VarChar(255)
  passwordHash        String             @db.VarChar(255)
  emailVerified       Boolean            @default(false)
  fcmToken            String?
  roleId              Int?
  role                Role?              @relation(fields: [roleId], references: [id])
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  roleRequests        RoleRequest[]
  coursesTaught       Course[]           @relation("TeacherCourses")
  enrolledCourses     CourseStudent[]
  activityCompletions AIReadingSession[]

  paraphraseAttempts ParaphraseAttempt[]
  mainIdeaAttempts   MainIdeaAttempt[]
  summaryAttempts    SummaryAttempt[]
  audioEvents        AIReadingAttempt[]
  userTranslations   UserTranslation[]
  pushNotifications  PushNotification[]

  preferences       UserPreferences?
  flashCardSessions FlashCardSession[]
}

model UserPreferences {
  id                     Int     @id @default(autoincrement())
  userId                 Int     @unique
  seenNotificationDialog Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model RoleRequestStatus {
  id          Int           @id @default(autoincrement())
  name        String        @unique @db.VarChar(50)
  description String        @db.VarChar(255)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  requests    RoleRequest[]
}

model RoleRequest {
  id              Int      @id @default(autoincrement())
  userId          Int
  requestedRoleId Int
  statusId        Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User               @relation(fields: [userId], references: [id])
  requestedRole Role               @relation("RequestedRole", fields: [requestedRoleId], references: [id])
  status        RoleRequestStatus? @relation(fields: [statusId], references: [id])
}

model Course {
  id          Int             @id @default(autoincrement())
  name        String          @db.VarChar(150)
  description String?         @db.VarChar(500)
  inviteCode  String          @unique @db.VarChar(50)
  teacherId   Int?
  teacher     User?           @relation("TeacherCourses", fields: [teacherId], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  students    CourseStudent[]
  activities  Activity[]
}

model CourseStudent {
  id        Int      @id @default(autoincrement())
  courseId  Int
  studentId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course  Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  student User   @relation(fields: [studentId], references: [id])

  @@unique([courseId, studentId])
}

model Activity {
  id          Int       @id @default(autoincrement())
  courseId    Int
  title       String    @db.VarChar(200)
  description String?   @db.VarChar(500)
  dueDate     DateTime?
  hasScoring  Boolean   @default(true)
  maxScore    Int? // 10, 20, 100, etc. - Null si no tiene puntaje
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  course            Course             @relation(fields: [courseId], references: [id], onDelete: Cascade)
  aiReading         AIReading?
  flashCardActivity FlashCardActivity?
  activityReminders ActivityReminder[]
}

model FlashCardActivity {
  id         Int      @id @default(autoincrement())
  activityId Int      @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  maxCards  Int    @default(10) // Cuántas cards por sesión
  cardOrder String @db.VarChar(20) // Random, Sequential

  activity Activity           @relation(fields: [activityId], references: [id], onDelete: Cascade)
  sessions FlashCardSession[]
}

model FlashCardSession {
  id                  Int       @id @default(autoincrement())
  flashCardActivityId Int
  studentId           Int
  startedAt           DateTime  @default(now())
  completedAt         DateTime?
  totalTimeSec        Int       @default(0)

  cardsCompleted   Int   @default(0) // Total de cards intentados
  correctAnswers   Int   @default(0) // Aciertos totales
  incorrectAnswers Int   @default(0) // Errores totales
  score            Float @default(0) // Promedio de confianza (1-5)

  // Foreign keys
  student           User               @relation(fields: [studentId], references: [id], onDelete: Cascade)
  flashCardActivity FlashCardActivity  @relation(fields: [flashCardActivityId], references: [id], onDelete: Cascade)
  cardAttempts      FlashCardAttempt[]

  @@unique([studentId, flashCardActivityId, startedAt])
  @@index([studentId, completedAt]) // ← para consultas de progreso
  @@index([flashCardActivityId, startedAt]) // ← para analytics del curso
}

model FlashCardAttempt {
  id                Int @id @default(autoincrement())
  sessionId         Int // Foreign key a FlashCardSession
  userTranslationId Int // Foreign key a UserTranslation (card específico)

  userAnswer      String           @db.VarChar(500) // Lo que escribió el usuario
  isCorrect       Boolean // Si acertó o no
  timeSpentSec    Int // Tiempo en esta card específica
  createdAt       DateTime         @default(now())
  session         FlashCardSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  userTranslation UserTranslation  @relation(fields: [userTranslationId], references: [id], onDelete: Cascade)

  @@index([sessionId, createdAt])
  @@index([userTranslationId]) // ← para análisis por palabra
}

model AIReading {
  id         Int      @id @default(autoincrement())
  activityId Int      @unique
  content    String   @db.Text
  length     String?  @db.VarChar(20) // e.g., Short, Medium, Long
  complexity String?  @db.VarChar(10) // e.g., A1, A2, B1, B2
  style      String?  @db.VarChar(50) // e.g., Informal, Formal, Academic, Storytelling
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  activity           Activity            @relation(fields: [activityId], references: [id], onDelete: Cascade)
  paraphraseAttempts ParaphraseAttempt[]
  mainIdeaAttempts   MainIdeaAttempt[]
  summaryAttempts    SummaryAttempt[]
  audioEvents        AIReadingAttempt[]
  completions        AIReadingSession[]
  translations       Translation[]
}

model AIReadingSession {
  id          Int     @id @default(autoincrement())
  studentId   Int
  aiReadingId Int
  completed   Boolean @default(false)

  totalProgress Int @default(0) // 0-100%
  totalScore    Int @default(0) // Puntaje acumulado

  readingCompleted    Boolean @default(false)
  paraphraseCompleted Boolean @default(false)
  mainIdeaCompleted   Boolean @default(false)
  summaryCompleted    Boolean @default(false)

  completedAt DateTime?

  student   User      @relation(fields: [studentId], references: [id])
  aiReading AIReading @relation(fields: [aiReadingId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([studentId, aiReadingId])
}

model ParaphraseAttempt {
  id               Int      @id @default(autoincrement())
  aiReadingId      Int
  userId           Int
  similarityScore  Int
  fluencyScore     Int
  originalityScore Int
  feedback         String?  @db.Text
  averageScore     Float
  timeSpentSec     Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  aiReading AIReading @relation(fields: [aiReadingId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id])

  @@index([aiReadingId])
  @@index([userId])
}

model MainIdeaAttempt {
  id               Int      @id @default(autoincrement())
  aiReadingId      Int
  userId           Int
  accuracyScore    Int
  clarityScore     Int
  concisenessScore Int
  feedback         String?  @db.Text
  averageScore     Float
  timeSpentSec     Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  aiReading AIReading @relation(fields: [aiReadingId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id])

  @@index([aiReadingId])
  @@index([userId])
}

model SummaryAttempt {
  id            Int      @id @default(autoincrement())
  aiReadingId   Int
  userId        Int
  accuracyScore Int
  coverageScore Int
  clarityScore  Int
  feedback      String?  @db.Text
  averageScore  Float
  timeSpentSec  Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  aiReading AIReading @relation(fields: [aiReadingId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id])

  @@index([aiReadingId])
  @@index([userId])
}

model AIReadingAttempt {
  id           Int      @id @default(autoincrement())
  aiReadingId  Int
  userId       Int
  timeSpentSec Int
  playCount    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt // Campo agregado aquí

  aiReading AIReading @relation(fields: [aiReadingId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id])

  @@index([aiReadingId])
  @@index([userId])
}

model Translation {
  id                   Int      @id @default(autoincrement())
  sourceText           String   @db.VarChar(500)
  sourceTextNormalized String   @db.Text
  translated           String   @db.Text
  sourceLang           String   @default("en") @db.VarChar(60)
  targetLang           String   @default("es") @db.VarChar(60)
  timesUsed            Int      @default(1)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  readingId            Int

  reading AIReading? @relation(fields: [readingId], references: [id], onDelete: Cascade)

  userTranslations UserTranslation[]

  @@unique([sourceTextNormalized, sourceLang, targetLang, readingId])
  @@index([sourceTextNormalized])
  @@index([readingId])
}

model UserTranslation {
  id            Int      @id @default(autoincrement())
  userId        Int
  translationId Int
  createdAt     DateTime @default(now())

  user              User               @relation(fields: [userId], references: [id])
  translation       Translation        @relation(fields: [translationId], references: [id], onDelete: Cascade)
  flashCardAttempts FlashCardAttempt[]

  @@unique([userId, translationId])
}

model GlobalConfig {
  id          Int      @id @default(autoincrement())
  buildNumber Int //actually it's the build number
  updatedAt   DateTime @default(now())
}

model NotificationType {
  id            Int                @id @default(autoincrement())
  name          String             @unique @db.VarChar(50)
  description   String             @db.VarChar(255)
  titleTemplate String             @db.VarChar(500)
  bodyTemplate  String             @db.VarChar(500)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  notifications PushNotification[]
}

model PushNotification {
  id             Int                        @id @default(autoincrement())
  userId         Int
  typeId         Int
  title          String                     @db.VarChar(150)
  message        String                     @db.Text
  data           Json? // Datos adicionales: {courseId: 1, activityId: 5}
  read           Boolean                    @default(false)
  sentAt         DateTime                   @default(now())
  readAt         DateTime?
  expiresAt      DateTime? // Cuando la notificación deja de ser relevante
  deliveryStatus NotificationDeliveryStatus @default(PENDING)

  // Relaciones
  user User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type NotificationType @relation(fields: [typeId], references: [id])

  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  activityReminders ActivityReminder[]

  @@index([userId, read])
  @@index([userId, sentAt])
  @@index([deliveryStatus])
  @@index([expiresAt])
}

model ActivityReminder {
  id         Int      @id @default(autoincrement())
  activityId Int
  notifyId   Int
  sentAt     DateTime @default(now())

  activity     Activity         @relation(fields: [activityId], references: [id], onDelete: Cascade)
  notification PushNotification @relation(fields: [notifyId], references: [id], onDelete: Cascade)

  @@unique([activityId, notifyId])
  @@index([activityId, notifyId])
}

enum NotificationDeliveryStatus {
  PENDING
  SENT
  DELIVERED
  FAILED
  EXPIRED
}
