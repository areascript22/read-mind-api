// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  description  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  users        User[]
  roleRequests RoleRequest[] @relation("RequestedRole")
}

model User {
  id                  Int               @id @default(autoincrement())
  name                String
  lastName            String
  email               String            @unique
  passwordHash        String
  emailVerified       Boolean           @default(false)
  roleId              Int?
  role                Role?             @relation(fields: [roleId], references: [id])
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  roleRequests        RoleRequest[]
  coursesTaught       Course[]          @relation("TeacherCourses")
  enrolledCourses     CourseStudent[]
  activityCompletions ActivityCompletion[] 

  paraphraseResults   ParaphraseResult[]   // relaci칩n inversa a침adida
}

model RoleRequestStatus {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  requests    RoleRequest[]
}

model RoleRequest {
  id              Int      @id @default(autoincrement())
  userId          Int
  requestedRoleId Int
  statusId        Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User               @relation(fields: [userId], references: [id])
  requestedRole Role               @relation("RequestedRole", fields: [requestedRoleId], references: [id])
  status        RoleRequestStatus? @relation(fields: [statusId], references: [id])
}

model Course {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  inviteCode  String    @unique
  teacherId   Int?
  teacher     User?     @relation("TeacherCourses", fields: [teacherId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  students    CourseStudent[]
  activities  Activity[]
}

model CourseStudent {
  id        Int      @id @default(autoincrement())
  courseId  Int
  studentId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course  Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  student User   @relation(fields: [studentId], references: [id])

  @@unique([courseId, studentId])
}

model Activity {
  id          Int      @id @default(autoincrement())
  courseId    Int
  title       String
  description String?
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  aiReading   AIReading?
  paraphrase  Paraphrase?        // relaci칩n inversa a침adida
  completions ActivityCompletion[]
}

model AIReading {
  id         Int      @id @default(autoincrement())
  activityId Int      @unique
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  activity Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
}

model Paraphrase {
  id         Int      @id @default(autoincrement())
  activityId Int      @unique
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  activity Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  results  ParaphraseResult[]
}

model ParaphraseResult {
  id            Int      @id @default(autoincrement())
  paraphraseId  Int
  userId        Int
  userAttempt   String
  similarity    Int
  fluency       Int
  originality   Int
  feedback      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  paraphrase Paraphrase @relation(fields: [paraphraseId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id])

  @@unique([paraphraseId, userId])
}


model ActivityCompletion {
  id         Int      @id @default(autoincrement())
  studentId  Int
  activityId Int
  completed  Boolean  @default(false)
  reward     Int      @default(0)

  student    User     @relation(fields: [studentId], references: [id])
  activity   Activity @relation(fields: [activityId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([studentId, activityId])
}
