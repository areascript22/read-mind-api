// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  description  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now())
  users        User[]
  roleRequests RoleRequest[] @relation("RequestedRole")
}

model User {
  id                  Int               @id @default(autoincrement())
  name                String
  lastName            String
  email               String            @unique
  passwordHash        String
  roleId              Int?
  role                Role?             @relation(fields: [roleId], references: [id])
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @default(now())
  roleRequests        RoleRequest[]
  coursesTaught       Course[]          @relation("TeacherCourses")
  enrolledCourses     CourseStudent[]
  activitySubmissions ActivityStudent[]
  studentAnswers      StudentAnswer[]
}

model RoleRequestStatus {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  requests    RoleRequest[]
}

model RoleRequest {
  id              Int      @id @default(autoincrement())
  userId          Int
  requestedRoleId Int
  statusId        Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())

  user          User               @relation(fields: [userId], references: [id])
  requestedRole Role               @relation("RequestedRole", fields: [requestedRoleId], references: [id])
  status        RoleRequestStatus? @relation(fields: [statusId], references: [id])
}

model ActivityType {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now())
  activities  Activity[]
}

model QuestionType {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now())
  questions   Question[]
}

model Course {
  id          Int             @id @default(autoincrement())
  name        String
  description String?
  inviteCode  String          @unique
  teacherId   Int?
  teacher     User?           @relation("TeacherCourses", fields: [teacherId], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())
  students    CourseStudent[]
  contents    CourseContent[]
  activities  Activity[]
}

model CourseStudent {
  id        Int      @id @default(autoincrement())
  courseId  Int
  studentId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  course  Course @relation(fields: [courseId], references: [id])
  student User   @relation(fields: [studentId], references: [id])
}

model ContentType {
  id          Int             @id @default(autoincrement())
  name        String          @unique
  description String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())
  contents    CourseContent[]
}

model CourseContent {
  id            Int      @id @default(autoincrement())
  courseId      Int
  title         String
  description   String?
  file          String?
  contentTypeId Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  course      Course      @relation(fields: [courseId], references: [id])
  contentType ContentType @relation(fields: [contentTypeId], references: [id])
}

model Activity {
  id          Int       @id @default(autoincrement())
  courseId    Int
  title       String
  description String?
  typeId      Int
  dueDate     DateTime?
  file        String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())

  course    Course            @relation(fields: [courseId], references: [id])
  type      ActivityType      @relation(fields: [typeId], references: [id])
  students  ActivityStudent[]
  questions Question[]
}

model ActivityStudent {
  id         Int      @id @default(autoincrement())
  activityId Int
  studentId  Int
  submitted  Boolean  @default(false)
  grade      Float?
  feedback   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  activity Activity @relation(fields: [activityId], references: [id])
  student  User     @relation(fields: [studentId], references: [id])
}

model Question {
  id            Int      @id @default(autoincrement())
  activityId    Int
  content       String
  typeId        Int
  questionOrder Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  activity       Activity        @relation(fields: [activityId], references: [id])
  type           QuestionType    @relation(fields: [typeId], references: [id])
  options        AnswerOption[]
  studentAnswers StudentAnswer[]
}

model AnswerOption {
  id         Int      @id @default(autoincrement())
  questionId Int
  text       String
  isCorrect  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  question Question        @relation(fields: [questionId], references: [id])
  answers  StudentAnswer[]
}

model StudentAnswer {
  id             Int      @id @default(autoincrement())
  questionId     Int
  studentId      Int
  answerText     String?
  answerOptionId Int?
  answerDate     DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())

  question     Question      @relation(fields: [questionId], references: [id])
  student      User          @relation(fields: [studentId], references: [id])
  answerOption AnswerOption? @relation(fields: [answerOptionId], references: [id])
}
